# Production Configuration for Render Deployment
# Copy this to .env on your Render instance

# Database Configuration (Update with your production database)
DB_HOST=your-production-db-host
DB_PORT=3306
DB_NAME=fb_campaign_launcher_prod
DB_USER=your-db-user
DB_PASSWORD=your-secure-db-password

# Server Configuration
PORT=5002
NODE_ENV=production

# JWT Configuration (MUST match Ad Forge JWT_SECRET)
JWT_SECRET=campaign-launcher-ad-forge-shared-secret-2024
JWT_EXPIRY=7d

# Ad Forge Integration
AD_SCRAPER_URL=https://ad-forge-api.onrender.com
# Update this URL when Ad Forge is deployed

# Facebook App Configuration (Required for OAuth)
FB_APP_ID=your_facebook_app_id
FB_APP_SECRET=your_facebook_app_secret
FB_API_VERSION=v18.0

# Facebook OAuth Redirect URI (Production)
FB_REDIRECT_URI=https://campaignlauncher.onrender.com/api/auth/facebook/callback

# Facebook Ad Account Configuration
FB_AD_ACCOUNT_ID=act_your_ad_account_id
FB_ACCESS_TOKEN=your_facebook_access_token
FB_PAGE_ID=your_facebook_page_id
FB_PIXEL_ID=your_facebook_pixel_id

# Frontend Configuration (Production)
FRONTEND_URL=https://campaignlauncher.onrender.com

# Encryption Key for Token Storage (Generate with: openssl rand -hex 32)
ENCRYPTION_KEY=generate_a_64_character_hex_string_for_production_use

# Redis Configuration (if using Redis on Render)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Eligibility Criteria Configuration
MIN_ACCOUNT_AGE_DAYS=30
REQUIRE_SPENDING_HISTORY=false
REQUIRE_PAYMENT_METHOD=true
MIN_AD_ACCOUNTS=1
CHECK_BUSINESS_VERIFICATION=false
ELIGIBILITY_VALIDITY_DAYS=30

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASSWORD=your_production_email_password
EMAIL_FROM=noreply@campaignlauncher.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Development Settings
SKIP_AUTH_CHECK=false
DEBUG_MODE=false

# Facebook OAuth Permissions
FB_REQUIRED_PERMISSIONS=ads_management,business_management,pages_show_list,ads_read,pages_read_engagement,pages_manage_ads

# CORS Configuration - Allow Ad Forge and frontend
CORS_ORIGIN=https://campaignlauncher.onrender.com,https://ad-forge-api.onrender.com

# Session Secret (Production - use a strong secret)
SESSION_SECRET=campaign-launcher-production-session-secret-change-this-2024

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_FACEBOOK_AUTH=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_MANUAL_REVIEW=false
ENABLE_AUTO_TOKEN_REFRESH=true